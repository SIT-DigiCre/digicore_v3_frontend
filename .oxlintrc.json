{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["node_modules/", ".next/", "out/", "build/"],
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "nextjs",
    "oxc",
    "import",
    "jsx-a11y"
  ],
  "rules": {
    "sort-keys": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react/exhaustive-deps": "off"
  }
}
