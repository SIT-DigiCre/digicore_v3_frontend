{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["node_modules/", ".next/", "out/", "build/"],
  "env": {
    "es2022": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "19.2.4"
    }
  },
  "plugins": ["eslint", "oxc", "nextjs", "react", "import", "jsx-a11y", "unicorn"],
  "rules": {
    "sort-imports": "warn"
  }
}
